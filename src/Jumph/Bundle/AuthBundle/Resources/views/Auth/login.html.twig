{% extends '::base_clear.html.twig' %}

{% block content %}
    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}
    <div class="form-box" id="login-box">
        <div class="header">Sign In</div>
        <form action="{{ path('jumph_auth_login_check') }}" method="post" class="form-horizontal" role="form">
            <div class="body bg-gray">
                <div class="form-group">
                    <input type="text" id="username" class="form-control" placeholder="username" name="_username" value="{{ last_username }}" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="password" id="password" name="_password" />
                </div>
            </div>
            <div class="footer">
                <button type="submit" class="btn bg-olive btn-block">Sign me in</button>
                <a href="{{ path('jumph_auth_register') }}" class="text-center">Register</a>
            </div>
        </form>
    </div>
{% endblock %}