{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} | Employees
{% endblock %}

{% block headerContent %}
    <h1>
        Clients
        <small>Add / Edit</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="{{ path('jumph_company_overview') }}"><i class="fa fa-building"></i> Clients</a></li>
        <li><a href="{{ path('jumph_employee_overview') }}"> Employees</a></li>
        <li>Add / Edit</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-6 col-md-12">
            <div class="box box-primary">
                {{ form_start(companyForm, { 'attr': { 'id': 'main-form'}}) }}
                <div class="box-header">
                    <!-- Potential title -->
                </div>
                <div class="box-body">
                    <div class="form-group">
                        {{ form_label(companyForm.name) }}
                        {{ form_widget(companyForm.name) }}
                        {{ form_errors(companyForm.name) }}
                    </div>
                    {{ form_widget(companyForm._token) }}
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                {{ form_end(companyForm, {'render_rest': false}) }}
            </div>
        </div>

        <div class="col-lg-6 col-md-12">
            <div class="box box-primary">
                <div class="box-header">
                    <!-- Potential title -->
                </div>
                <div class="box-body">
                    <!-- To be defined -->
                </div>
                <div class="box-footer">
                    <!-- Potential footer -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}