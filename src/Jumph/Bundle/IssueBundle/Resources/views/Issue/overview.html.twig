{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} | Issue tracker
{% endblock %}

{% block headerContent %}
    <h1>
        Issue tracker
        <small>Overview</small>
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-bug"></i> Issue tracker</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-header">
                    <!-- Potential title -->
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Status</th>
                                <th>Title</th>
                                <th>Project</th>
                                <th>Options</th>
                            </tr>
                            <tr>
                                <td colspan="5" class="text-center"><a href="" class="btn btn-primary"><i class="fa fa-lg fa-plus-circle"></i>  Add issue</a></td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5" class="text-center">No results</td>
                            </tr>
                            <tr class="danger">
                                <td>#0001</td>
                                <td>Open</td>
                                <td>First issue</td>
                                <td>First project</td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                            Options <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="#">View</a></li>
                                            <li><a href="#">Edit</a></li>
                                            <li class="divider"></li>
                                            <li><a href="#">Delete</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                            <tr class="success">
                                <td>#0002</td>
                                <td>Resolved</td>
                                <td>Second issue</td>
                                <td>First project</td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                            Options <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="#">View</a></li>
                                            <li><a href="#">Edit</a></li>
                                            <li class="divider"></li>
                                            <li><a href="#">Delete</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="box-footer clearfix">
                    <!-- pagination -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
